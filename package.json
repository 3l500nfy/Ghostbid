{
  "name": "ghostbid",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:contracts": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "test": "npm run test:contracts",
    "test:contracts": "hardhat test",
    "test:coverage": "cross-env SOLIDITY_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp hh-artifacts --testfiles \"test/**/*.ts\"",
    "lint": "eslint \"frontend/src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md,sol,yml}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx,js,json,md,sol,yml}\"",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "clean:contracts": "rimraf ./hh-artifacts ./hh-cache ./types ./fhevmTemp"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.9.1",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.4.7",
    "encrypted-types": "^0.0.4",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.3.0-1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@zama-fhe/relayer-sdk": "^0.3.0-5",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^7.0.3",
    "hardhat": "^2.26.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^2.1.0",
    "rimraf": "^6.0.1",
    "solhint": "^6.0.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3"
  }
}
